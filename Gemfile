# Gemfile

source "https://rubygems.org"

# Specify the modern Jekyll version
gem "jekyll", "~> 4.3"

# Use the modern Sass converter for Jekyll 4
gem "jekyll-sass-converter", "~> 3.0"

# Specify the Jekyll plugins your site actually uses
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-include-cache"
end

# Required for the local 'jekyll serve' command
gem "webrick"